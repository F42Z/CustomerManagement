@model List<CustomerManagement.UI.Models.Customer>

<h1>Customers</h1>
<a asp-action="Create">Add New Customer</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.Email</td>
            <td>@customer.Phone</td>
            <td>
                <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>